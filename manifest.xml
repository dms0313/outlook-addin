<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <Id>f0f25b62-5bf6-4f75-8d35-9bfa98dcb123</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Dan</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Send to Notion"/>
  <Description DefaultValue="Send email details to your Notion Database"/>
  <IconUrl DefaultValue="https://dms0313.github.io/outlook-addin/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://dms0313.github.io/outlook-addin/assets/icon-64.png"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://dms0313.github.io/outlook-addin/taskpane.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <ExtensionPoint xsi:type="MessageReadCommandSurface">
    <OfficeTab id="TabDefault">
      <Group id="grpNotion" label="Notion">
        <Control xsi:type="Button" id="btnSendToNotion">
          <Label resid="resSendToNotion"/>
          <Supertip>
            <Title resid="resSendToNotion"/>
            <Description resid="resSendToNotionDesc"/>
          </Supertip>
          <Icon>
            <bt:Image size="16" resid="icon16"/>
            <bt:Image size="32" resid="icon32"/>
          </Icon>
          <Action xsi:type="ShowTaskpane">
            <SourceLocation resid="taskpaneUrl"/>
          </Action>
        </Control>
      </Group>
    </OfficeTab>
  </ExtensionPoint>

  <Resources>
    <bt:Images>
      <bt:Image id="icon16" DefaultValue="https://dms0313.github.io/outlook-addin/assets/icon-16.png"/>
      <bt:Image id="icon32" DefaultValue="https://dms0313.github.io/outlook-addin/assets/icon-32.png"/>
    </bt:Images>

    <bt:Urls>
      <bt:Url id="taskpaneUrl" DefaultValue="https://dms0313.github.io/outlook-addin/taskpane.html"/>
    </bt:Urls>

    <bt:ShortStrings>
      <bt:String id="resSendToNotion" DefaultValue="Send to Notion"/>
    </bt:ShortStrings>

    <bt:LongStrings>
      <bt:String id="resSendToNotionDesc" DefaultValue="Send this emailâ€™s subject, sender, date, and body to your Notion database."/>
    </bt:LongStrings>
  </Resources>

</OfficeApp>
